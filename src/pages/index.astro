---
import Layout from '../components/Layout.astro';
import CreateForm from '../components/CreateForm';
import HowItWorks from '../components/HowItWorks.astro';
import SecurityFeatures from '../components/SecurityFeatures.astro';
import FAQ from '../components/FAQ.astro';

export const prerender = true;
---

<Layout
  title="Burnvelope - Secure One-Time Secret Sharing"
  description="Share passwords, API keys, and sensitive information securely. End-to-end encrypted, one-time view, then gone forever. Free and open source."
>
  <!-- Hero Section -->
  <section id="create" class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="hero-title">
            Share Secrets That
            <span class="title-accent">Burn After Reading</span>
          </h1>
          <p class="hero-subtitle">
            Securely share passwords, API keys, and sensitive information with end-to-end encryption.
            View once, then it's gone forever.
          </p>
        </div>

        <div class="hero-form">
          <div class="card card--elevated">
            <CreateForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <HowItWorks />

  <!-- Security Features -->
  <SecurityFeatures />

  <!-- Use Cases Section -->
  <section class="use-cases">
    <div class="container container--narrow">
      <div class="section-header">
        <h2>Perfect For</h2>
        <p>Secure sharing for every situation</p>
      </div>

      <div class="use-cases-grid">
        <div class="use-case">
          <div class="use-case-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
              <path d="M7 11V7a5 5 0 0110 0v4" />
            </svg>
          </div>
          <h3>Passwords</h3>
          <p>Share login credentials with team members or clients without leaving traces in chat or email.</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4" />
            </svg>
          </div>
          <h3>API Keys</h3>
          <p>Onboard developers securely by sharing API keys, tokens, and secrets that self-destruct.</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="1" y="4" width="22" height="16" rx="2" ry="2" />
              <line x1="1" y1="10" x2="23" y2="10" />
            </svg>
          </div>
          <h3>Payment Info</h3>
          <p>Share credit card numbers or bank details securely when needed for one-time transactions.</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
              <polyline points="14 2 14 8 20 8" />
              <line x1="16" y1="13" x2="8" y2="13" />
              <line x1="16" y1="17" x2="8" y2="17" />
              <polyline points="10 9 9 9 8 9" />
            </svg>
          </div>
          <h3>Private Notes</h3>
          <p>Send confidential messages, codes, or sensitive information that shouldn't persist.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ />

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-card">
        <h2>Ready to Share Securely?</h2>
        <p>Start sharing secrets that burn after reading. No signup required.</p>
        <a href="#create" class="btn btn--primary btn--lg">
          Create a Secret Link
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-12) 0 var(--space-20);
    scroll-margin-top: 80px;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-10);
  }

  .hero-text {
    text-align: center;
    max-width: 800px;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: var(--space-6);
  }

  .title-accent {
    display: block;
    font-weight: var(--font-weight-bold);
    background: linear-gradient(
      90deg,
      #b45309 0%,
      #d97706 20%,
      #f59e0b 40%,
      #fbbf24 50%,
      #f59e0b 60%,
      #d97706 80%,
      #b45309 100%
    );
    background-size: 200% auto;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: ember-flow 4s ease-in-out infinite;
  }

  @keyframes ember-flow {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 640px;
    margin: 0 auto;
  }

  .hero-form {
    width: 100%;
    max-width: 680px;
  }

  /* Use Cases Section */
  .use-cases {
    padding: var(--space-20) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .section-header h2 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-3);
  }

  .section-header p {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
  }

  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }

  @media (max-width: 640px) {
    .use-cases-grid {
      grid-template-columns: 1fr;
    }
  }

  .use-case {
    text-align: center;
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    transition: all var(--transition-normal);
  }

  .use-case:hover {
    border-color: var(--color-brand-accent);
    box-shadow: var(--shadow-md);
  }

  .use-case-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-4);
  }

  .use-case-icon svg {
    width: 32px;
    height: 32px;
    color: var(--color-text-muted);
  }

  .use-case h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-2);
  }

  .use-case p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  /* CTA Section */
  .cta-section {
    padding: var(--space-12) 0 var(--space-20);
  }

  .cta-card {
    text-align: center;
    padding: var(--space-12);
    background: #0f172a;
    border-radius: var(--radius-2xl);
  }

  .cta-card h2 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-3);
    color: #fafafa;
  }

  .cta-card p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-6);
  }

  .cta-card .btn--primary {
    background: #fafafa;
    color: #0f172a;
  }

  .cta-card .btn--primary:hover {
    background: #e2e8f0;
  }

  /* Create Form Styles */
  :global(.create-form) {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  :global(.create-form .form-row) {
    display: flex;
    gap: var(--space-4);
    align-items: flex-end;
  }

  :global(.create-form .expiration-group) {
    flex-shrink: 0;
    min-width: 140px;
  }

  :global(.create-form .submit-btn) {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    font-family: var(--font-sans);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-brand-primary-text);
    background: var(--color-brand-primary);
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);
  }

  :global(.create-form .submit-btn:hover:not(:disabled)) {
    background: var(--color-brand-primary-hover);
    box-shadow: var(--shadow-md);
  }

  :global(.create-form .submit-btn:disabled) {
    opacity: 0.6;
    cursor: not-allowed;
  }

  :global(.create-form .submit-btn svg) {
    width: 20px;
    height: 20px;
  }

  :global(.create-form .spinner) {
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  :global(.create-form .error-message) {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--color-accent-error);
    background: rgba(239, 68, 68, 0.1);
    border-radius: var(--radius-md);
  }

  :global(.create-form .error-message svg) {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  :global(.create-form .security-note) {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
  }

  :global(.create-form .security-note svg) {
    width: 24px;
    height: 24px;
    margin-right: var(--space-1);
    color: var(--color-accent-success);
    flex-shrink: 0;
  }

  /* Success State */
  :global(.create-form-success) {
    text-align: center;
    padding: var(--space-4) 0;
  }

  :global(.create-form-success .success-icon) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin-bottom: var(--space-4);
    background: rgba(5, 150, 105, 0.1);
    border-radius: 50%;
  }

  :global(.create-form-success .success-icon svg) {
    width: 32px;
    height: 32px;
    color: var(--color-accent-success);
  }

  :global(.create-form-success h3) {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-2);
  }

  :global(.create-form-success .success-message) {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  :global(.create-form-success .url-container) {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  :global(.create-form-success .url-input) {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.create-form-success .copy-btn) {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    font-family: var(--font-sans);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: white;
    background: var(--color-brand-accent);
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  :global(.create-form-success .copy-btn:hover) {
    background: var(--color-brand-accent-hover);
  }

  :global(.create-form-success .copy-btn.copied) {
    background: var(--color-accent-success);
  }

  :global(.create-form-success .copy-btn svg) {
    width: 16px;
    height: 16px;
  }

  :global(.create-form-success .create-another-btn) {
    padding: var(--space-2) var(--space-4);
    font-family: var(--font-sans);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color var(--transition-fast);
  }

  :global(.create-form-success .create-another-btn:hover) {
    color: var(--color-text-primary);
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: var(--space-8) 0 var(--space-12);
    }

    :global(.create-form .form-row) {
      flex-direction: column;
    }

    :global(.create-form .expiration-group) {
      width: 100%;
    }

    :global(.create-form-success .url-container) {
      flex-direction: column;
    }
  }
</style>
