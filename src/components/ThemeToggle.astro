---
// Theme toggle component with sun/moon icons
---

<button
  class="theme-toggle"
  id="theme-toggle"
  type="button"
  aria-label="Toggle dark mode"
>
  <svg class="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5" />
    <line x1="12" y1="1" x2="12" y2="3" />
    <line x1="12" y1="21" x2="12" y2="23" />
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
    <line x1="1" y1="12" x2="3" y2="12" />
    <line x1="21" y1="12" x2="23" y2="12" />
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
  </svg>
  <svg class="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
  </svg>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .theme-toggle:hover {
    color: var(--color-text-primary);
    background: var(--color-bg-tertiary);
  }

  .theme-toggle svg {
    width: 20px;
    height: 20px;
  }

  /* Default: show moon (for light mode) */
  .sun-icon {
    display: none;
  }

  .moon-icon {
    display: block;
  }

  /* Manual dark mode override */
  :global([data-theme="dark"]) .sun-icon {
    display: block;
  }

  :global([data-theme="dark"]) .moon-icon {
    display: none;
  }

  /* Browser preference dark mode (when no manual override to light) */
  @media (prefers-color-scheme: dark) {
    :global(:root:not([data-theme="light"])) .sun-icon {
      display: block;
    }

    :global(:root:not([data-theme="light"])) .moon-icon {
      display: none;
    }
  }
</style>

<script>
  function initTheme() {
    const toggle = document.getElementById('theme-toggle');
    const root = document.documentElement;

    // Get stored preference or null
    const stored = localStorage.getItem('theme');

    // If there's a stored preference, apply it
    if (stored) {
      root.setAttribute('data-theme', stored);
    }
    // Otherwise, no data-theme attribute - CSS will use prefers-color-scheme

    toggle?.addEventListener('click', () => {
      // Determine current effective theme
      const currentTheme = root.getAttribute('data-theme');
      let isDark: boolean;

      if (currentTheme) {
        isDark = currentTheme === 'dark';
      } else {
        // No manual preference, check system preference
        isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      }

      // Toggle to opposite
      const newTheme = isDark ? 'light' : 'dark';
      root.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
    });
  }

  // Run on initial load
  initTheme();

  // Re-run on Astro page transitions (if using View Transitions)
  document.addEventListener('astro:after-swap', initTheme);
</script>
